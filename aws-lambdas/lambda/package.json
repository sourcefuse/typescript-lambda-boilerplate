{
  "name": "lambda-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .js,.ts,.tsx src ./__tests__/",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx src ./__tests__/",
    "script:build-dependency-layer": "yarn install --prod && scripts/build-dependency-layer.sh && yarn install;",
    "build": "tsc && yarn script:build-dependency-layer && cp -a dist/. ../iac/terraform/dist/  && yarn test ",
    "cleanup": "rm -rf dist/* && cd ../iac/terraform && rm -rf dist/*",
    "test": "jest"
  },
  "repository": "https://github.com/sourcefuse/typescript-lambda-boilerplate",
  "author": "SourceFuse",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.93",
    "@types/jest": "^28.1.3",
    "@types/lambda-log": "^2.2.1",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "chai": "^4.3.6",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "tsc": "^2.0.4",
    "typescript": "^4.7.4"
  },
  "dependencies": {
